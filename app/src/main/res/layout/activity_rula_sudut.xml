<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrizk.workpostureevaluationrula_reba.rula.RulaSudutActivity">

    <include
        android:id="@+id/rula_sudut_toolbar"
        layout="@layout/view_toolbar"
        />

    <ScrollView
        android:id="@+id/rula_sudut_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rula_sudut_toolbar">

        <RelativeLayout
            android:id="@+id/reba_sudut_relativeLayoutScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rula_sudut_imageView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@mipmap/ic_launcher"
                />
            
            <android.support.v7.widget.CardView
                android:id="@+id/rula_sudut_cardViewLeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rula_sudut_imageView"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rula_sudut_linearLayoutLeg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rula_sudut_textLeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Legs"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <RadioGroup
                        android:id="@+id/rula_sudut_leg_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rula_sudut_leg_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Legs and feet are supported in balanced posture"
                            />

                        <RadioButton
                            android:id="@+id/rula_sudut_leg_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Legs and feet are not supported balanced posture"
                            />

                    </RadioGroup>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    

</RelativeLayout>
