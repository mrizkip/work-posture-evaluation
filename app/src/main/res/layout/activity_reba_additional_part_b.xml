<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrizk.workpostureevaluationrula_reba.reba.RebaAdditionalPartBActivity">

    <include
        android:id="@+id/rebaAdd2_toolbar"
        layout="@layout/view_toolbar"
        />
    
    <ScrollView
        android:id="@+id/rebaAdd2_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rebaAdd2_toolbar">
        <RelativeLayout
            android:id="@+id/rebaAdd2_relativeLayoutScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd2_cardViewUpperArm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd2_linearLayoutUpperArm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd2_textUpperArm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upper Arm"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <CheckBox
                        android:id="@+id/rebaAdd2_upperArm_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shoulder is raised" />

                    <CheckBox
                        android:id="@+id/rebaAdd2_upperArm_check2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upper arm is abducted" />

                    <CheckBox
                        android:id="@+id/rebaAdd2_upperArm_check3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arm is supported or person is leaning" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd2_cardViewWrist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebaAdd2_cardViewUpperArm"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd2_linearLayoutWrist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd2_textWrist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wrist"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rebaAdd2_wrist_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wrist is bent from midline or twisted" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd2_cardViewCoupling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebaAdd2_cardViewWrist"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd2_linearLayoutCoupling"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd2_textCoupling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coupling"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rebaAdd2_coupling_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rebaAdd2_coupling_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Good"
                            />

                        <RadioButton
                            android:id="@+id/rebaAdd2_coupling_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fair"
                            />

                        <RadioButton
                            android:id="@+id/rebaAdd2_coupling_radio3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Poor"
                            />

                        <RadioButton
                            android:id="@+id/rebaAdd2_coupling_radio4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unacceptable"
                            />

                    </RadioGroup>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd2_cardActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebaAdd2_cardViewCoupling"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd2_linearLayoutActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd2_textActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rebaAdd2_activity_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 or more body parts are held for longer than 1 minute (static)" />

                    <CheckBox
                        android:id="@+id/rebaAdd2_activity_check2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Repeated small range actions (more than 4x per minute)" />

                    <CheckBox
                        android:id="@+id/rebaAdd2_activity_check3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Action causes rapid large range changes in postures or unstable base" />


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    
</RelativeLayout>
