<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrizk.workpostureevaluationrula_reba.RebaAdditionalPartAActivity">

    <include
        android:id="@+id/rebaAdd1_toolbar"
        layout="@layout/view_toolbar" />

    <ScrollView
        android:id="@+id/rebaAdd1_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rebaAdd1_toolbar">

        <RelativeLayout
            android:id="@+id/rebaAdd1_relativeLayoutScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd1_cardViewNeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd1_linearLayoutNeck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd1_textNeck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neck"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rebaAdd1_Neck_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neck is twisted" />

                    <CheckBox
                        android:id="@+id/rebaAdd1_Neck_check2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neck is side bending" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd1_cardViewTrunk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebaAdd1_cardViewNeck"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd1_linearLayoutTrunk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd1_textTrunk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trunk"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rebaAdd1_Trunk_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trunk is twisted" />

                    <CheckBox
                        android:id="@+id/rebaAdd1_Trunk_check2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trunk is side bending" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd1_cardViewLeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebaAdd1_cardViewTrunk"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd1_linearLayoutLeg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd1_textLeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Legs"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rebaAdd1_leg_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rebaAdd1_leg_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Support in the two legs, walking or seated"
                            />

                        <RadioButton
                            android:id="@+id/rebaAdd1_leg_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Support in one leg"
                            />

                    </RadioGroup>

                    <CheckBox
                        android:id="@+id/rebaAdd1_leg_check1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="30&#176; to 60&#176;" />

                    <CheckBox
                        android:id="@+id/rebaAdd1_leg_check2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="More than 60&#176;" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rebaAdd1_cardViewLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rebaAdd1_cardViewLeg"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rebaAdd1_linearLayoutLoad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rebaAdd1_textLoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neck, Trunk, and Legs Load"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rebaAdd1_load_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rebaAdd1_load_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Less than 5 Kg" />

                        <RadioButton
                            android:id="@+id/rebaAdd1_load_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 to 10 Kg" />

                        <RadioButton
                            android:id="@+id/rebaAdd1_load_radio3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="More than 10 Kg" />

                    </RadioGroup>

                    <CheckBox
                        android:id="@+id/rebaAdd1_load_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shock or rapid build up of force"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
