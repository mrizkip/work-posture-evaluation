<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mrizk.workpostureevaluationrula_reba.reba.ResultRebaActivity">

    <include
        android:id="@+id/result_reba_toolbar"
        layout="@layout/view_toolbar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_reba_toolbar"
        android:padding="10dp"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/result_reba_imvSudut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Side View"
            app:layout_constraintBottom_toTopOf="@+id/result_reba_linearLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/result_reba_linearLeft"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/result_reba_linearBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/result_reba_linearRight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_reba_imvSudut">

            <TextView
                android:id="@+id/result_reba_tvNeckScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Neck Score: "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/result_reba_tvTrunkScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Trunk Score: "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/result_reba_tvUpperArmScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Upper Arm Score: "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/result_reba_tvLowerArmScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Lower Arm Score: "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/result_reba_tvWristScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Wrist Score: "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/result_reba_tvLegsScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Total Score: "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/result_reba_tvTotalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Total Score: "
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_reba_linearRight"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/result_reba_linearBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/result_reba_linearLeft"
            app:layout_constraintTop_toBottomOf="@+id/result_reba_imvSudut">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="You must be careful in this part:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/result_reba_partHighScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="()"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_reba_linearBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/result_reba_sideView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_undo_black_24dp"
                android:tint="@color/white_icon"
                android:contentDescription="Back to Side View" />
            <ImageView
                android:id="@+id/result_reba_save"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_save_black_24dp"
                android:tint="@color/white_icon"
                android:contentDescription="Save Screenshot" />
            <ImageView
                android:id="@+id/result_reba_healthCare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_accessibility_black_24dp"
                android:tint="@color/colorAccent"
                android:contentDescription="Health Care" />
            <ImageView
                android:id="@+id/result_reba_home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@color/white_icon"
                android:contentDescription="Home" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
