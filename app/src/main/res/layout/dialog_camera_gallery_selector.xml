<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="16dp">

    <ImageView
        android:id="@+id/cameraGallerySelector_imageIntro"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"
        />

    <Space
        android:id="@+id/cameraGallerySelector_centerPosition"
        android:layout_below="@id/cameraGallerySelector_imageIntro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/cameraGallerySelector_cameraContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/cameraGallerySelector_centerPosition"
        android:layout_below="@id/cameraGallerySelector_imageIntro"
        android:background="?android:selectableItemBackground"
        android:padding="12dp">

        <ImageView
            android:id="@+id/cameraGallerySelector_cameraIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_camera_alt_black_24dp" />

        <TextView
            android:id="@+id/cameraGallerySelector_cameraString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraGallerySelector_cameraIcon"
            android:layout_centerHorizontal="true"
            tools:text="Camera" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cameraGallerySelector_galleryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/cameraGallerySelector_centerPosition"
        android:layout_below="@id/cameraGallerySelector_imageIntro"
        android:background="?android:selectableItemBackground"
        android:padding="12dp">

        <ImageView
            android:id="@+id/cameraGallerySelector_galleryIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/cameraGallerySelector_galleryString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraGallerySelector_galleryIcon"
            android:layout_centerHorizontal="true"
            tools:text="Gallery" />

    </RelativeLayout>

</RelativeLayout>