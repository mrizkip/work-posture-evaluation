<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mrizk.workpostureevaluationrula_reba.rula.RulaAdditionalActivity">

    <include
        android:id="@+id/rulaAdd1_toolbar"
        layout="@layout/view_toolbar" />

    <ScrollView
        android:id="@+id/rulaAdd1_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rulaAdd1_toolbar">

        <RelativeLayout
            android:id="@+id/rulaAdd_relativeLyoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd_arm_wrist_cardViewMuscle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd_arm_wrist_linearLayoutMuscle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd_arm_wrist_textMuscle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rula_additional_arm_and_wrist_muscle"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rulaAdd_arm_wrist_muscle_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rula_additional_posture_static" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd_arm_wrist_cardViewLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd_arm_wrist_cardViewMuscle"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd_arm_wrist_linearLayoutLoad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd_arm_wrist_textLoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rula_additional_arm_and_wrist_load"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rulaAdd_arm_wrist_radioGroupLoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rulaAdd_arm_wrist_load_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/rula_additional_2kg" />

                        <RadioButton
                            android:id="@+id/rulaAdd_arm_wrist_load_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rula_additional_2_to_10kg_intermittent" />

                        <RadioButton
                            android:id="@+id/rulaAdd_arm_wrist_load_radio3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rula_additional_2_to_10kg_repeated" />

                        <RadioButton
                            android:id="@+id/rulaAdd_arm_wrist_load_radio4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rula_additional_10kg" />

                    </RadioGroup>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd_neck_trunk_legs_cardViewMuscle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd_arm_wrist_cardViewLoad"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd_neck_trunk_legs_linearLayoutMuscle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd_neck_trunk_legs_textMuscle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rula_additional_neck_trunk_and_legs_muscle"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rulaAdd_neck_trunk_legs_Muscle_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rula_additional_posture_static_neck" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd_neck_trunk_legs_cardViewLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd_neck_trunk_legs_cardViewMuscle"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd_neck_trunk_legs_linearLayoutLoad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd_neck_trunk_legs_textLoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rula_additional_neck_trunk_and_legs_load"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rulaAdd_neck_trunk_legs_load_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rulaAdd_neck_trunk_legs_load_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/rula_additional_2kg" />

                        <RadioButton
                            android:id="@+id/rulaAdd_neck_trunk_legs_load_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rula_additional_2_to_10kg_intermittent" />

                        <RadioButton
                            android:id="@+id/rulaAdd_neck_trunk_legs_load_radio3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rula_additional_2_to_10kg_repeated" />

                        <RadioButton
                            android:id="@+id/rulaAdd_neck_trunk_legs_load_radio4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rula_additional_10kg" />

                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
