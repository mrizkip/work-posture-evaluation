<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrizk.workpostureevaluationrula_reba.rula.RulaAdditionalPartAActivity">

    <include
        android:id="@+id/rulaAdd1_toolbar"
        layout="@layout/view_toolbar" />

    <ScrollView
        android:id="@+id/rulaAdd1_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rulaAdd1_toolbar">

        <RelativeLayout
            android:id="@+id/rulaAdd1_relativeLyoutScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd1_cardViewUpperArm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd1_linearLayoutUpperArm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd1_textUpperArm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upper Arm"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <CheckBox
                        android:id="@+id/rulaAdd1_upperArm_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shoulder is raised" />

                    <CheckBox
                        android:id="@+id/rulaAdd1_upperArm_check2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upper arm is abducted" />

                    <CheckBox
                        android:id="@+id/rulaAdd1_upperArm_check3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arm is supported or person is leaning" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd1_cardViewLowerArm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd1_cardViewUpperArm"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd1_linearLayoutLowerArm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd1_textLowerArm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lower Arm"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rulaAdd1_lowerArm_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lower arm work across midline
or out to side of body" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd1_cardViewWrist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd1_cardViewLowerArm"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd1_linearLayoutWrist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd1_textWrist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wrist"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rulaAdd1_wrist_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wrist is bent from midline" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd1_cardViewWristTwist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd1_cardViewWrist"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd1_linearLayoutWristTwist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd1_textWristTwist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wrist Twist"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rulaAdd1_wristTwist_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rulaAdd1_wristTwist_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Wrist is twist in mid-range"
                            />

                        <RadioButton
                            android:id="@+id/rulaAdd1_wristTwist_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wrist is twist at or near end of range"
                            />

                    </RadioGroup>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd1_cardViewMuscle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd1_cardViewWristTwist"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd1_linearLayoutMuscle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd1_textMuscle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arm and Wrist Muscle"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/rulaAdd1_muscle_check1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Posture is mainly static, e.g. held
> 10 minute orrepeated occurs 4X per minute" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/rulaAdd1_cardViewLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rulaAdd1_cardViewMuscle"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/rulaAdd1_linearLayoutLoad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rulaAdd1_textLoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arm and Wrist Load"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rulaAdd1_radioGroupLoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rulaAdd1_load_radio1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Less than 2 Kg intermittent load"
                            />

                        <RadioButton
                            android:id="@+id/rulaAdd1_load_radio2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2 to 10 Kg intermittent load"
                            />

                        <RadioButton
                            android:id="@+id/rulaAdd1_load_radio3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2 to 10 Kg static or repeated load"
                            />

                        <RadioButton
                            android:id="@+id/rulaAdd1_load_radio4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="more than 10 Kg or repeated or shocks load"
                            />

                    </RadioGroup>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
