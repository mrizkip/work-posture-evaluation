<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/intro_toolbar"
        layout="@layout/view_toolbar" />

    <ImageView
        android:id="@+id/intro_imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/intro_toolbar"
        android:src="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/intro_buttonRula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@+id/intro_imageView"
        android:text="RULA" />

    <Button
        android:id="@+id/intro_buttonReba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@+id/intro_buttonRula"
        android:text="REBA" />

</RelativeLayout>